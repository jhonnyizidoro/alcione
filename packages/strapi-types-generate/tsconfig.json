{
  "compilerOptions": {
    "module": "es2022",
    "lib": ["ES2020"],
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitThis": true
  },
  "exclude": ["node_modules/", "build/"]
}
